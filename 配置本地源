# Remove the default yum and backup it
cd /etc
mkdir yum_backup
cp /etc/yum.repos.d/* /etc/yum_backup
rm -rf /etc/yum.repos.d/*

# Create a new local yum file
vi /etc/yum.repos.d/local.repo
[local_server]
Name=This is a local sever
baseurl=file:///position of your rpm packages # like file:///home/localserver
enabled=1
gpgcheck=0
:wq

# Install createrepo
rpm -ivh createrepo

# Configuring local yum source and making it work
cd /home/localserver # The location of the local installation package
createrepo -v ./
yum clean all
yum makecache

#######################
# Tested on CentOS 7. #
#######################
